<div>
  <div class="form-group row mt-3">
    <div class="col-4 fs-4">
      <label for="name">名稱<span style="color:red">*</span> :</label>
    </div>
    <div class="col-6 fs-4">
      <input type="text" class="form-control" id="name" name="name" value="{{record.name}}" required>
    </div>
  </div>
  <div class="form-group row mt-3">
    <div class="col-4 fs-4">
      <label for="date">日期<span style="color:red">*</span> :</label>
    </div>
    <div class="col-6 fs-4">
      <input type="date" class="form-control" id="date" name="date" value="{{record.date}}" required>
    </div>
  </div>
  <div class="form-group row mt-3">
    <div class="col-4 fs-4">
      <label for="category">類別<span style="color:red">*</span> :</label>
    </div>
    <div class="col-6 fs-4">
      <select class="form-control" id="category" name="categoryId" required>
        <option value="">Select</option>
      </select>
    </div>
  </div>
  <div class="form-group row mt-3">
    <div class="col-4 fs-4">
      <label for="amount">金額<span style="color:red">*</span> :</label>
    </div>
    <div class="col-6 fs-4">
      <input type="number" class="form-control" id="amount" name="amount" min="0" max="100000000"
        value="{{record.amount}}" required>
    </div>
  </div>
</div>